# Database - Supabase PostgreSQL
# Get these values from your Supabase project settings > Database
# Format: postgres.[PROJECT_REF]
POSTGRES_USER=postgres.your_project_ref
POSTGRES_PASSWORD=your-supabase-db-password
# Pooler URL for production (connection pooling)
POSTGRES_SERVER=aws-0-us-west-1.pooler.supabase.com
POSTGRES_PORT=6543
POSTGRES_DB=postgres

# For direct connection (development/migrations):
# POSTGRES_SERVER=db.your_project_ref.supabase.co
# POSTGRES_PORT=5432

# Security
SECRET_KEY=generate-a-secure-random-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OAuth - Get from Google Cloud Console
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Payments - Get from Razorpay Dashboard
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret

# Storage
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=.storage
# For production, use GCS:
# STORAGE_TYPE=gcs
# GCS_BUCKET_NAME=your-bucket-name
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# File Upload
MAX_UPLOAD_MB=5
MAX_FILES_PER_DAY=20

# Queue - Use Upstash Redis for serverless or Redis Cloud
REDIS_URL=redis://localhost:6379/0
# For production: redis://username:password@host:port/0

# LLM Configuration - OpenAI API
LLM_API_KEY=sk-your-openai-api-key
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4-turbo-preview

# CORS - Add your frontend URLs
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","http://localhost:8000"]
